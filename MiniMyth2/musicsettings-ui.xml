            <checkbox name="musicdefaultupmix" from="checkbox_base">
                <position>735,320</position>
            </checkbox>

            <textarea name="nonid3filenameformat_label" from="musiclocationlbl">
                <position>250,370</position>
                <value>Filename Format:</value>
