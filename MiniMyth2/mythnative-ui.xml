            </textarea>
    
            <textarea name="progdatetime" from="textarea_base">
                <area>350,510,150,25</area>
                <font>small</font>
                <case>normal</case>
                <align>left,vcenter</align>
            </textarea>
    
            <imagetype name="preview_image">
                <area>730,510,30,30</area>
