        <group name="importnative1group" from="defaultscreencontent_1A_animated">
           <area>0,0,720,988</area>
            <!-- ================================================== -->
            <!-- Screen description                                 -->
            <!-- ================================================== -->
            <textarea name="pagetitledesc" from="textarea_base">
                <area>250,10,515,65</area>
