<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="WEB">

    <button>
        <type>NETFLIX</type>
        <text>Netflix</text>
        <description>Play</description>
        <!--netflix<depends>disabled</depends>-->
        <action>EXEC /usr/bin/google-chrome.py --disable-seccomp-sandbox --disable-background-mode --kiosk 'http://www.netflix.com/'</action>
    </button>

    <button>
        <type>NEWS</type>
        <text>News Feeds</text>
        <description>Keep up with the news</description>
        <action>PLUGIN mythnews</action>
        <depends>mythnews</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>WEB</text>
        <description>Browse</description>
        <action>PLUGIN mythbrowser</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>NET_VIDEO_SEARCH</type>
        <text>Search Internet Video</text>
        <description>Search popular video sites</description>
        <action>JUMP MythNetSearch</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>NET_VIDEO_TREE</type>
        <text>Play online streams</text>
        <description>Browse highlights and entire sites</description>
        <action>JUMP MythNetTree</action>
        <depends>mythnetvision</depends>
    </button>


    <button>
        <type>MYTHTWITTER_TIMELINE</type>
        <text>Tweets</text>
        <description>Send and Receive</description>
        <action>JUMP MythTwitter_Timeline</action>
        <depends>mythtwitter</depends>
    </button>

    <button>
        <type>SMOLT</type>
        <text>Hardware Profile</text>
        <description>Upload</description>
        <action>PLUGIN mythsmolt</action>
        <depends>mythsmolt</depends>
    </button>

    <button>
        <type>NETFLIX</type>
        <text>ShowMAX</text>
        <description>Play</description>
        <!--netflix<depends>disabled</depends>-->
        <action>EXEC /usr/bin/google-chrome.py --disable-seccomp-sandbox --disable-background-mode --kiosk 'http://www.showmax.com/'</action>
    </button>

</mythmenu>
