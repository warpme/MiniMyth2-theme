<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<!--

Common MythArchive window definitions

-->
<mythuitheme>

    <window name="selectdestination">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/MediaStreamDVDBGD.png</filename>
        </imagetype>
        <imagetype name="backgroundoverlay" from="background_overlay_base" />
        <group name="screenlayoutSettings" from="defaultscreenlayoutSettings_2A_animated">
            <position>0,0</position>
        </group> 
        <group name="selectdestination1group" from="defaultscreencontent_1A_animated">
           <area>0,0,720,988</area>
            <!-- ================================================== -->
            <!-- Screen description                                 -->
            <!-- ================================================== -->
            <textarea name="pagetitledesc" from="textarea_base">
                <area>250,10,515,65</area>
                <font>menu_description</font>
                <case>upper</case>
                <align>right,bottom</align>
                <cutdown>yes</cutdown>
                <multiline>yes</multiline>
                <value>Write video to data dvd or file</value>
            </textarea>

            <textarea name="destination_text" from="textarea_base">
                <area>250,75,515,65</area>
                <font>menu_active</font>
                <case>upper</case>
                <align>right,vcenter</align>
                <cutdown>yes</cutdown>
                <multiline>yes</multiline>
                <value>Select Destination</value>
            </textarea>

            <!-- ================================================== -->
            <!-- screen content                                     -->
            <!-- ================================================== -->
            <textarea name="destinationlbl" from="textarea_base">
                <area>250,175,510,35</area>
                <value>Destination:</value>
            </textarea>

            <buttonlist name="destination_selector" from="selector_base">
                <position>450,175</position>
            </buttonlist>

            <textedit name="filename_edit" from="textedit_menu_wide">
                <position>250,210</position>
            </textedit>

            <textarea name="freespace_label" from="destinationlbl">
                <position>250,245</position>
                <value>Free Space:</value>
            </textarea>

            <textarea name="makeisoimage_text" from="destinationlbl">
                <position>250,315</position>
                <value>Make ISO Image</value>
            </textarea>

             <textarea name="burntodvdr_text" from="destinationlbl">
                <position>250,350</position>
                <value>Burn to DVD</value>
            </textarea>

            <textarea name="erasedvdrw_text" from="destinationlbl">
                <position>250,385</position>
                <value>Force Overwrite of DVD-RW Media</value>
            </textarea>

       </group>

        <group name="selectdestinationbutton1group" from="defaultscreencontent_2A_animated">
           <area>788,0,720,988</area>
            <textarea name="filelbl" from="textarea_base">
                <area>2,140,180,35</area>
                <alpha>128</alpha>
                <font>title_small</font>
                <align>right,bottom</align>
                <value>File</value>
            </textarea>

            <button name="find_button" from="button_base_menu">
                <position>2,175</position>
                <value>Find Location</value>
            </button>
        </group>

        <group name="selectdestination2group" from="defaultscreencontent_1A_animated">
           <area>0,0,720,988</area>
            <textarea name="freespace_text" from="textarea_base">
                <area>420,245,320,35</area>
                <case>normal</case>
                <alpha>128</alpha>
            </textarea>

            <checkbox name="makeisoimage_check" from="checkbox_base">
                <position>730,315</position>
            </checkbox>

            <checkbox name="burntodvdr_check" from="checkbox_base">
                <position>730,350</position>
            </checkbox>

            <checkbox name="erasedvdrw_check" from="checkbox_base">
                <position>730,385</position>
            </checkbox>
        </group>

        <group name="selectdestinationbutton2group" from="defaultscreencontent_2A_animated">
           <area>788,0,720,988</area>
            <textarea name="navigationlbl" from="textarea_base">
                <area>2,245,180,35</area>
                <alpha>128</alpha>
                <font>title_small</font>
                <align>right,bottom</align>
                <value>Navigation</value>
            </textarea>

            <button name="cancel_button" from="button_base_menu">
                <position>2,280</position>
                <value>Cancel</value>
            </button>

            <button name="prev_button" from="button_base_menu">
                <position>2,315</position>
                <value>Previous</value>
            </button>

            <button name="next_button" from="button_base_menu">
                <position>2,350</position>
                <value>Next</value>
            </button>
        </group>

    </window>

