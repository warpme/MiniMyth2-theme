<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="MAIN">

    <button>
        <type>TV_WATCH_RECORDINGS</type>
        <text>Watch Recordings</text>
        <description>Play recordings</description>
        <action>TV_WATCH_RECORDING</action>
    </button>

    <button>
        <type>VIDEO_BROWSER</type>
        <text>Watch Videos</text>
        <description>Play</description>
        <action>JUMP Video Default</action>
    </button>

    <button>
        <type>MUSIC_PLAY</type>
        <text>Listen to Music</text>
        <description>Play music files and internet radio streams</description>
        <action>JUMP Play music</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>INTERNET_RADIO</type>
        <text>Listen to Radio Stream</text>
        <description>Play radio streams</description>
        <action>JUMP Play radio stream</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>TV_WATCH_TV</type>
        <text>Watch Live TV</text>
        <description>Watch live television</description>
        <action>TV_WATCH_LIVE</action>
    </button>

    <button>
        <type>MENU_OPTICAL_DISKS</type>
        <text>Watch A Disc</text>
        <description>Play the video on a Blu-ray or DVD</description>
        <action>MENU optical_menu.xml</action>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Pictures</text>
        <description>Show</description>
        <action>JUMP Gallery Default</action>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Pictures</text>
        <description>Show</description>
        <action>PLUGIN mythgallery</action>
        <depends>mythgallery</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather</text>
        <description>Local weather forecast</description>
        <action>PLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>

    <button>
        <type>GAME</type>
        <text>Games</text>
        <description>Play</description>
        <action>PLUGIN mythgame</action>
        <depends>mythgame</depends>
    </button>

    <button>
        <type>PHONE</type>
        <text>Telephony</text>
        <description>Call</description>
        <depends>disabled</depends>
        <action>MENU phone.xml</action>
    </button>

    <button>
        <type>SETTINGS_GENERAL</type>
        <text>Tools</text>
        <description>System maintenance</description>
        <action>MENU mms_utils.xml</action>
    </button>

    <button>
        <type>SETUP_MENU</type>
        <text>Setup</text>
        <description>Configure MythTV and plugins</description>
        <action>MENU main_settings.xml</action>
        <password>SetupPinCode</password>
    </button>

    <button>
        <type>ZONEMINDER</type>
        <text>ZoneMinder</text>
        <description>Home surveillance</description>
        <action>MENU zonemindermenu.xml</action>
        <depends>mythzoneminder</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Information Center</text>
        <description>Information and Communications</description>
        <action>MENU mms_web.xml</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>TV_SCHEDULE_RECORDINGS</type>
        <text>Schedule</text>
        <description>Pick shows to record</description>
        <action>MENU mms_guide.xml</action>
    </button>

</mythmenu>
