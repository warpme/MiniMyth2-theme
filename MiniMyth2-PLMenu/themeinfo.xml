        <!-- Type. Legal Values are one or more of: UI, OSD and Menu -->
        <type>Menu</type>
    </types>

    <!-- Theme Author Details (Optional)-->
    <author>
        <!-- Your name -->
        <name>Piotr Oniszczuk</name>

        <!-- Your Email Address -->
        <email>warpme@o2.pl</email>
    </author>

    <!-- The Versioning Info (Required) -->
